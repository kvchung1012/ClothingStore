@model ClothesStore.Model.Model.EF.Slider
@if (Model == null)
{
    <form class="form-input">
        <div class="row">
            <div class="col-md-9 row">
                <div class="form-group col-md-6">
                    <input type="hidden" name="Id" id="Id" value="0">
                    <label class="col-form-label">Tên Slider</label>
                    <div>
                        <input class="form-control validation" type="text" id="Name" name="Name" placeholder="Nhập tên slider">
                        <span class="help-block"></span>
                    </div>
                </div>

                <div class="form-group col-md-6">
                    <label class="col-form-label">Tiêu đề phụ</label>
                    <div>
                        <input class="form-control validation" type="text" name="SubName" placeholder="Nhập tiêu đề phụ">
                        <span class="help-block"></span>
                    </div>
                </div>

                <div class="form-group col-md-12">
                    <label class="col-form-label">Thứ tự</label>
                    <div>
                        <input class="form-control validation" type="number" name="OrderBy" placeholder="Nhập thứ tự">
                        <span class="help-block"></span>
                    </div>
                </div>
                <div class="form-group col-md-12">
                    <label class="col-form-label">Đường dẫn</label>
                    <div>
                        <input class="form-control validation" type="text" name="Link" placeholder="Nhập đường dẫn">
                        <span class="help-block"></span>
                    </div>
                </div>

             

                <div class="form-group col-md-12">
                    <label class="col-form-label" for="text-input">Trạng thái</label>
                    <div>
                        <input id="Active" type="radio" name="Status" value="True" checked />
                        <label class="col-form-label" for="Active">Hoạt động</label>
                        <input class="ml-2" id="Lock" type="radio" name="Status" value="False" />
                        <label class="col-form-label" for="Lock">Khóa</label>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <img src="/Image/Static/no-image.jpg" alt="Alternate Text" class="w-100 show-image" style="object-fit:contain" onclick="OpenFolderImage()" />
                <input type="text" name="Image" value="/Image/Static/no-image.jpg" hidden id="Image" />
            </div>
        </div>
    </form>
}
else
{
    <form class="form-input">
        <div class="row">
            <div class="col-md-9 row">
                <div class="form-group col-md-6">
                    <input type="hidden" name="Id" id="Id" value="@Model.Id">
                    <label class="col-form-label">Tên Slider</label>
                    <div>
                        <input class="form-control validation" type="text" id="Name" value="@Model.Name" name="Name" placeholder="Nhập tên slider">
                        <span class="help-block"></span>
                    </div>
                </div>

                <div class="form-group col-md-6">
                    <label class="col-form-label">Tiêu đề phụ</label>
                    <div>
                        <input class="form-control validation" type="text" name="SubName" value="@Model.SubName" placeholder="Nhập tiêu đề phụ">
                        <span class="help-block"></span>
                    </div>
                </div>

                <div class="form-group col-md-12">
                    <label class="col-form-label">Thứ tự</label>
                    <div>
                        <input class="form-control validation" type="number" name="OrderBy" value="@Model.OrderBy" placeholder="Nhập thứ tự">
                        <span class="help-block"></span>
                    </div>
                </div>
                <div class="form-group col-md-12">
                    <label class="col-form-label">Đường dẫn</label>
                    <div>
                        <input class="form-control validation" type="text" name="Link" value="@Model.Link" placeholder="Nhập đường dẫn">
                        <span class="help-block"></span>
                    </div>
                </div>

                <div class="form-group col-md-12">
                    <label class="col-form-label" for="text-input">Trạng thái</label>
                    <div>
                        <input id="Active" type="radio" name="Status" value="True" @if (Model.Status == true) { <text> checked</text> } />
                        <label class="col-form-label" for="Active">Hoạt động</label>
                        <input class="ml-2" id="Lock" type="radio" name="Status" value="False" @if (Model.Status != true) { <text> checked</text> } />
                        <label class="col-form-label" for="Lock">Khóa</label>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <img src="@Model.Image" alt="Alternate Text" class="w-100 show-image" style="object-fit:contain" onclick="OpenFolderImage()" />
                <input type="text" name="Image" value="@Model.Image" hidden id="Image" />
            </div>
        </div>
    </form>
}